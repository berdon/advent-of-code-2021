    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch File",
        "program": "${file}",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${fileDirname}/out/**/*.js"],
        "sourceMaps": true,
        "smartStep": true,
        "internalConsoleOptions": "openOnSessionStart",
        "console": "integratedTerminal"
      }
    ]
  }